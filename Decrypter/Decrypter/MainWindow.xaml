<Window x:Class="Decrypter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Decrypter"
        mc:Ignorable="d"
        Title="Elyasaf Elbaz" Height="950" Width="1280" WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="842*"/>
        </Grid.RowDefinitions>
        <Button Content="MonoAlphabetic Cipher" FontSize="30" Grid.Row="0" Margin="0,0,774,0" Click="MonoAlphabetic_Click"/>
        <Button Content="Ceasar Cipher" FontSize="30" Grid.Row="0" Click="Ceasar_Click" Height="77" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="536">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.37"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-1.994"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Frame x:Name="MainFrame" Margin="0,3,0,0" Grid.Row="1"/>
    </Grid>
</Window>